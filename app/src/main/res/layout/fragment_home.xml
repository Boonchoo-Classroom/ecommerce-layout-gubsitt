<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <ImageView
            android:id="@+id/bannerImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/banner_placeholder_foreground"
            android:contentDescription="Banner Image" />

        <TextView
            android:id="@+id/recommendedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="รายการสินค้าแนะนำ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/product1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/product_placeholder_foreground"
                    android:contentDescription="Product 1" />

                <TextView
                    android:id="@+id/product1Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สินค้า 1"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/product2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/product_placeholder_foreground"
                    android:contentDescription="Product 2" />

                <TextView
                    android:id="@+id/product2Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สินค้า 2"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/product3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/product_placeholder_foreground"
                    android:contentDescription="Product 3" />

                <TextView
                    android:id="@+id/product3Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="สินค้า 3"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/promotionLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="โปรโมชั่นที่น่าสนใจ"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/promo1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/promo_placeholder_foreground"
                    android:contentDescription="Promotion 1" />

                <TextView
                    android:id="@+id/promo1Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="โปรโมชั่น 1"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/promo2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/promo_placeholder_foreground"
                    android:contentDescription="Promotion 2" />

                <TextView
                    android:id="@+id/promo2Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="โปรโมชั่น 2"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/promo3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/promo_placeholder_foreground"
                    android:contentDescription="Promotion 3" />

                <TextView
                    android:id="@+id/promo3Label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="โปรโมชั่น 3"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
